<UserControl
	x:Class="LogicCircuit.WireDisplayControl"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:properties="clr-namespace:LogicCircuit.Properties"
	FlowDirection="{x:Static properties:Resources.FlowDirection}"
>
	<Border
		BorderBrush="{x:Static SystemColors.GradientActiveCaptionBrush}"
		BorderThickness="1"
		Background="{StaticResource WindowBackground}"
		CornerRadius="3"
	>
		<StackPanel Orientation="Vertical" Margin="3">
			<TextBlock Text="{x:Static properties:Resources.ToolTipWire}"/>
			<TextBlock Name="bitWidth"/>
			<TextBlock Name="display"/>
		</StackPanel>
	</Border>
</UserControl>
