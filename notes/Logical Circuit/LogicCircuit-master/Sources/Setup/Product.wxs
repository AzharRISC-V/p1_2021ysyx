			<TextStyle Id="WixUI_Font_Bigger" FaceName="Segoe UI" Size="12" />
			<TextStyle Id="WixUI_Font_Title" FaceName="Segoe UI" Size="9" Bold="yes" />

			<Property Id="DefaultUIFont" Value="WixUI_Font_Normal" />
